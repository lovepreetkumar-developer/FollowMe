<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Loader" parent="android:Theme.Translucent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="DialogTheme2" parent="android:Theme.Translucent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomTextViewLight" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <!--*********************dialog*****************************-->
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>

    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


</resources>
