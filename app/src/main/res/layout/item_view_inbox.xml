<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.techeytech.followme.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="bean"
            type="com.techeytech.followme.beans.response_beans.FeedBean" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:id="@+id/image_user"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/image_profile_circle"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toEndOf="@+id/image_user"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CustomTextViewRegular"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text="Jomaya Doli" />

                    <TextView
                        style="@style/CustomTextViewLight"
                        android:layout_alignParentEnd="true"
                        android:text="12.15 PM"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">

                    <TextView
                        style="@style/CustomTextViewRegular"
                        android:singleLine="true"
                        android:text="Hi how are you boss?"
                        android:textSize="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:textColor="@color/gray_light_two" />

                    <TextView
                        style="@style/CustomTextViewRegular"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_circle_primary_filled"
                        android:gravity="center"
                        android:maxWidth="@dimen/_20sdp"
                        android:maxHeight="@dimen/_15sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/view_placeholder_bg_color" />

    </LinearLayout>

</layout>
